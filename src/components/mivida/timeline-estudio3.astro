      allStudies
        .sort((j1, j2) => j2.data.year - j1.data.year)
        .map((study) => {
          return (
            <section>
              <div class="h-[350px] flex p-0 mt-10 items-center flex-row-reverse">
                <a href={study.slug} class="w-48">
                  <Image
                    alt={study.slug}
                    src={study.data.logo}
                    width={200}
                    format="webp"
                    transition:name={`image_${study.slug}`}
                  />
                </a>
              </div>
            </section>
          );
        })
